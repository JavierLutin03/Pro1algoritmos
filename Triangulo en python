limite = 500

print("Triples de Pit√°goras menores o iguales a 500:")
hipotenusa = 1
while hipotenusa <= limite:
    lado1 = 1
    while lado1 <= hipotenusa:
        lado2 = lado1
        while lado2 <= hipotenusa:
            if lado1**2 + lado2**2 == hipotenusa**2:
                print(lado1, ",", lado2, ",", hipotenusa)
            lado2 += 1
        lado1 += 1
    hipotenusa += 1
