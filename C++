#include <iostream>
using namespace std;

int main() {
    int limite = 500;

    cout << "Triples de PitÃ¡goras menores o iguales a 500:" << endl;
    int hipotenusa = 1;
    while (hipotenusa <= limite) {
        int lado1 = 1;
        while (lado1 <= hipotenusa) {
            int lado2 = lado1;
            while (lado2 <= hipotenusa) {
                if (lado1 * lado1 + lado2 * lado2 == hipotenusa * hipotenusa) {
                    cout << lado1 << ", " << lado2 << ", " << hipotenusa << endl;
                }
                lado2++;
            }
            lado1++;
        }
        hipotenusa++;
    }

    return 0;
}








